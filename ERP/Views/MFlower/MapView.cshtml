<!DOCTYPE html>
<html>
 
	<head>
		<meta charset="utf-8" />
		<title>移动互联网地图定位自动检索系统-熊盼</title>
		<style type="text/css">
			* {
				margin: 0px;
				padding: 0px;
			}
			
			body {
				font-family: "微软雅黑";
				color: #666;
				font-size: 12px;
			}
			
			.header {
				width: 100%;
				height: 80px;
				background: #f5f5f5;
				border-bottom: 1px solid #d2d2d2;
			}
			
			.header .h_logo {
				padding: 20px 30px 0 30px;
				float: left;
			}
			
			.header .h_search {
				float: left;
				line-height: 75px;
			}
			
			.header .h_search span {
				font-size: 16px;
				font-family: "楷体";
			}
			
			.header .h_search .t_txt {
				width: 125px;
				height: 25px;
				outline: none;
				border: 1px solid #ededed;
				padding-left: 6px;
				letter-spacing: .5px;
			}
			
			.header .h_search .t_btn {
				width: 60px;
				height: 28px;
				outline: none;
				color: #fff;
				background: #27c;
				border-radius: 5px;
				cursor: pointer;
			}
			
			.header .h_search .t_btn:hover {
				background: #000;
				transition: all 0.8s ease;
			}
			
			.maps {
				width: 100%;
				height: 800px;
			}
			
			.maps .m_map {
				width: 100%;
				height: 800px;
			}
			
			#panel {
				width: 250px;
				max-height: 80%;
				border: 1px solid silver;
				position: absolute;
				right: 20px;
				top: 80px;
				border-top: none;
				overflow: auto;
			}
		</style>
	</head>
 
	<body>
		<div class="header">
			<div class="h_logo">
				<h1>高德地图路径规划</h1>
			</div>
			<div class="h_search">
				<span>起始地</span><input type="text" class="t_txt" id="start" placeholder="起始地" />
				<span>结束地</span><input type="text" class="t_txt" id="end" placeholder="结束地" />
				<input type="button" class="t_btn" value="搜索" onclick="search()" />
				<span>关键词查找</span>
				<input type="text" class="t_txt" id="site"  />
				<input type="button" class="t_btn" value="搜一搜" onclick="keysearch()" />
			</div>
		</div>
		<div class="maps">
			<div class="m_map" id="mapContainer"></div>
			<div id="panel"></div>
		</div>
		<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=c892adb4571e31adcf085646a26eaec5"></script>
		<script type="text/javascript">
		    var map, toolBar, mouseTool;
		    var map = new AMap.Map('mapContainer', {
		        resizeEnable: true,
		        zoom: 11,
		    });
		    //给地图添加地图操作ToolBar插件、鼠标工具MouseTool插件
		    map.plugin(["AMap.ToolBar", "AMap.MouseTool"], function () {
		        toolBar = new AMap.ToolBar();
		        map.addControl(toolBar);
		        mouseTool = new AMap.MouseTool(map);
		    });
		    AMap.plugin('AMap.Autocomplete', function () {
		        //实例化AutoComplete
		        var autoOptions = {
		            city: "北京市",
		            input: "start"
		        };
		        autocomplete = new AMap.Autocomplete(autoOptions);
		    });		   

		    //搜索展示
		    function search() {
		        //加载公交换乘的插件
		        AMap.service('AMap.Transfer', function () { //回调函数
		            var trans;
		            transOptions = {
		                map: map,
		                panel: "panel",
		                city: '北京市', //公交城市
		                policy: AMap.TransferPolicy.LEAST_TIME //乘车策略
		            };
		            //构造公交换乘类
		            trans = new AMap.Transfer(transOptions);
		            //根据起、终点坐标查询公交换乘路线
		            trans.search([{
		                keyword: document.getElementById('start').value
		            }, {
		                keyword: document.getElementById('end').value
		            }], function (status, results) { });
		        });
		    };

		    function keysearch() {
		        var site = document.getElementById('site').value;
		        AMap.service(['AMap.PlaceSearch'], function () {
		            var placeSearch = new AMap.PlaceSearch({
		                pageSize: 5,
		                pageIndex: 1,
		                city: "北京市",
		                map: map,
		                panel: panel
		            });
		            //关键字查询
		            placeSearch.search(site);
		        });
		    };
		</script>
	</body>
 
</html>
