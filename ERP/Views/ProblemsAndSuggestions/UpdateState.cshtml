@Styles.Render("~/bootstrap/css/bootstrap.css")
@Scripts.Render("~/Plugins/jQuery/jquery-2.2.3.min.js")
@*加载弹出层*@
@Scripts.Render("~/Thems/js/layer/layer.js")

<script>
    $(function () {
        $("#btn_add").click(function () {
            $.ajax({
                url: '/ProblemsAndSuggestions/UpdateStateInfo?State=' + $("#State").val() + '&id=' + $("#id").val(),
                success: function (data)
                {
                    if (data=="1") {
                        layer.msg('操作成功');
                    }
                    if (data == "0") {
                        layer.msg('操作失败');
                    }
                }
            })

        })
    })
</script>
    <div class="box-body">
        <br />
        <div class="form-group" style="height:30px;">
            <span for="inputEmail3" class="col-sm-2 control-label"><span style="color:red;">*</span>修改状态&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <div class="col-sm-4">
                <select class="form-control" name="State" id="State">
                    <option value="1" selected="selected">待处理</option>
                    <option value="2">已处理</option>
                </select>
                <input type="hidden" id="id" name="id"  value="@ViewData["idText"]"/>
            </div>
        </div>
    </div>
                    <!-- /.box-body -->
    <div class="box-footer" style="text-align: center;margin-top:50px;">
        <button id="btn_add" type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-saved" aria-hidden="true"></span>保存
        </button>
        <button id="btn_delete" type="button" class="btn btn-default" onclick="parent.layer.closeAll();" style="margin-left:25px;">
            <span class="glyphicon glyphicon-random" aria-hidden="true"></span>&nbsp;&nbsp;取消
        </button>
    </div>
