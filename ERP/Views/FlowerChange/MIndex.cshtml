                                    result += ' <li><span class="list_img"><img src="' + data[i].Photo + '" width="100" height="100" /></span><span class="list_img"> <img src="' + data[i].ChangePhoto + '" width="100" height="100" /> </span><span class="list_info"> <strong>更换人:' + data[i].WorkUsersRealName + '</strong> <em>更换内容: ' + data[i].ContentMsg + '</em><b>' + data[i].Number + '</b><small>操作时间:<s>  ' + data[i].time + '</s></small></span></li>';
                                    
                                   
