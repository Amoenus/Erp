            });
        });
       
        var page = 2;
        var finished = 0;
        var sover = 0;

        //如果屏幕未到整屏自动加载下一页补满
        var setdefult = setInterval(function () {
            if (sover == 1)
                clearInterval(setdefult);
            else if ($("#prolist").height() < $(window).height())
                loadmore($(window));
            else
                clearInterval(setdefult);
        }, 500);

        //加载完
        function loadover() {
            if (sover == 1) {
                var overtext = "Duang～到底了";
