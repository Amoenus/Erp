                            console.log(data);
                            if(data==""||data==null)
                            {
                                console.log('数据加载完了');
                                sover = 1;
                                loadover();
                                if (page == 1) {
                                    $("#no_msg").removeClass("hidden");
                                    $(".loadover").remove();
                                }
                            }
                            else
